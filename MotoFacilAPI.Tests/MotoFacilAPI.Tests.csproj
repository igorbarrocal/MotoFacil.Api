<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Alinhado para .NET 8 (mesmo do projeto principal) -->
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>false</IsPackable>

		<!-- Nome de assembly explícito para evitar conflito de nomes -->
		<AssemblyName>MotoFacilAPI.Tests</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="coverlet.collector" Version="6.0.2" />
		<!-- Atualizado para a patch que o NuGet costuma resolver (evita NU1603) -->
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="8.0.10" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.0" />
		<PackageReference Include="Moq" Version="4.20.72" />
		<PackageReference Include="xunit" Version="2.9.2" />
		<PackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="Xunit" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\MotoFacil-API\MotoFacil-API.csproj" />
	</ItemGroup>

</Project>